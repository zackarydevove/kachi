generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AssetTypeEnum {
  networth
  crypto
  real_estate
  stock
  cash
  exotic
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  accounts      Account[]
}

model Account {
  id           Int      @id @default(autoincrement())
  name         String
  userId        Int
  avatar       String?

  user      User @relation(fields: [userId], references: [id])

  assets    Asset[]
}

model Asset {
  id           Int      @id @default(autoincrement())
  accountId    Int
  name        String
  type       AssetTypeEnum
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  account   Account @relation(fields: [accountId], references: [id])

  assetSnapshots AssetSnapshot[]
}

model AssetSnapshot {
  id          Int       @id @default(autoincrement())
  assetId     Int
  value       Int
  date        DateTime

  asset       Asset @relation(fields: [assetId], references: [id])
}